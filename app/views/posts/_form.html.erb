<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :slug, style: "display: block" %>
    <%= form.text_field :slug %>
  </div>

  <div>
    <%= form.label :last_activity, style: "display: block" %>
    <%= form.datetime_field :last_activity %>
  </div>

  <div>
    <%= form.label :post_type, style: "display: block" %>
    <%= form.text_field :post_type %>
  </div>

  <div>
    <%= form.label :comment_count, style: "display: block" %>
    <%= form.number_field :comment_count %>
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.number_field :rating %>
  </div>

  <div>
    <%= form.label :is_commentable, style: "display: block" %>
    <%= form.check_box :is_commentable %>
  </div>

  <div>
    <%= form.label :is_visible, style: "display: block" %>
    <%= form.check_box :is_visible %>
  </div>

  <div>
    <%= form.label :is_draft, style: "display: block" %>
    <%= form.check_box :is_draft %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

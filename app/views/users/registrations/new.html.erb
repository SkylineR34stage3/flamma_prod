<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, multipart: true) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :profile_pic, style: "display: block" %>
    <%= f.file_field :profile_pic %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
  </div>

  <div>
    <%= f.label :about_me, style: "display: block" %>
    <%= f.text_area :about_me %>
  </div>

  <div class="field">
    <%= f.label :telegram_id %><br />
    <%= f.text_field :telegram_id %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>


  <div>
    <%= f.label :company, style: "display: block" %>
    <%= f.text_field :company %>
  </div>

  <div>
    <%= f.label :position, style: "display: block" %>
    <%= f.text_field :position %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
